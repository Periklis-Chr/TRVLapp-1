<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="@color/orange">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/costumer_icon_dialog"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="2dp"

            android:layout_marginTop="2dp"
            android:src="@mipmap/customer_icon3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/costumer_hotel_dialog"
            android:layout_width="180dp"
            android:layout_height="180dp"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_baseline_hotel_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/costumer_dialog_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_cid"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_icon_dialog" />

        <TextView
            android:id="@+id/costumer_dialog_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="id"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_id_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_icon_dialog" />

        <TextView
            android:id="@+id/costumer_dialog_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_name"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_id_label" />


        <TextView
            android:id="@+id/costumer_dialog_name"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="name"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_name_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_id" />


        <TextView
            android:id="@+id/costumer_dialog_surname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_surname"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_name_label" />

        <TextView
            android:id="@+id/costumer_dialog_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="surname"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_surname_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_name" />

        <TextView
            android:id="@+id/costumer_dialog_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_phone"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_surname_label" />

        <TextView
            android:id="@+id/costumer_dialog_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="phone"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_phone_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_surname" />


        <TextView
            android:id="@+id/costumer_dialog_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_email"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_phone_label" />

        <TextView
            android:id="@+id/costumer_dialog_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="email"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_email_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_phone" />


        <TextView
            android:id="@+id/costumer_dialog_pid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_pid"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_email_label" />

        <TextView
            android:id="@+id/costumer_dialog_pid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="pid"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_pid_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_email" />

        <TextView
            android:id="@+id/costumer_dialog_city_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_city"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_pid_label" />

        <TextView
            android:id="@+id/costumer_dialog_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="city"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_city_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_pid" />

        <TextView
            android:id="@+id/costumer_dialog_hotel_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/card_hotel"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_city_label" />

        <TextView
            android:id="@+id/costumer_dialog_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="hotel"
            android:textColor="@color/textInPurple"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/costumer_dialog_hotel_label"
            app:layout_constraintTop_toBottomOf="@+id/costumer_dialog_city" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>