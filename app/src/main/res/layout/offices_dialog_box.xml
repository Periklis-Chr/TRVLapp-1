<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/orange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/icon_dialog_office"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_baseline_store_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025">

        </ImageView>

        <TextView
            android:id="@+id/office_dialog_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="@string/card_ofid"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textInPurple"
            app:layout_constraintEnd_toStartOf="@+id/office_dialog_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_dialog_office" />

        <TextView
            android:id="@+id/office_dialog_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="id"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textInPurple"
            app:layout_constraintStart_toEndOf="@+id/office_dialog_id_label"
            app:layout_constraintTop_toBottomOf="@+id/icon_dialog_office" />

        <TextView
            android:id="@+id/office_dialog_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/card_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textInPurple"
            app:layout_constraintEnd_toStartOf="@+id/office_dialog_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/office_dialog_id_label" />

        <TextView
            android:id="@+id/office_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textInPurple"
            app:layout_constraintStart_toEndOf="@+id/office_dialog_name_label"
            app:layout_constraintTop_toBottomOf="@+id/office_dialog_id" />

        <TextView
            android:id="@+id/office_dialog_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/card_address"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textInPurple"
            app:layout_constraintEnd_toStartOf="@+id/office_dialog_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/office_dialog_name_label" />

        <TextView
            android:id="@+id/office_dialog_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"


            android:text="address"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textInPurple"
            app:layout_constraintStart_toEndOf="@+id/office_dialog_address_label"
            app:layout_constraintTop_toBottomOf="@+id/office_dialog_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>

