<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/tour_icon_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/destination_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </ImageView>


        <TextView
            android:id="@+id/tour_row_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="id"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/tour_icon_row"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tour_row_city"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/tour_row_id"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tour_row_country"
            android:layout_width="147dp"
            android:layout_height="wrap_content"


            android:padding="8dp"
            android:text="country"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/tour_row_city"
            app:layout_constraintTop_toTopOf="parent"
            />



        <TextView
            android:id="@+id/tour_row_duration"
            android:layout_width="147dp"
            android:layout_height="wrap_content"


            android:padding="8dp"
            android:text="duration"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/tour_row_id"
            app:layout_constraintTop_toBottomOf="@+id/tour_row_id"
            />


        <TextView
            android:id="@+id/tour_row_type"
            android:layout_width="147dp"
            android:layout_height="wrap_content"


            android:padding="8dp"
            android:text="test"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/tour_row_country"
            app:layout_constraintTop_toBottomOf="@+id/tour_row_country"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>